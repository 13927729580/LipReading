<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <SurfaceView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:id="@+id/surfaceView" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/output"
            android:id="@+id/output" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="621dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recordButton" android:layout_alignParentTop="true"
            android:layout_marginTop="650dp" android:layout_alignTop="@+id/output"
            android:contentDescription=""/>
</RelativeLayout>